.overlay
.modal
    button(type="button").modal__close
        span.visually-hidden=modal.close
        img(src="/img/logo/icon-cross-small.svg", alt="")
    img(src="/img/logo/email.svg", alt="").modal__icon
    h3.modal__thanks=modal.thanks
    p.modal__description.modal__description--test=modal.test
        br
        br
        | #{modal.dev_team}
    p.modal__description.modal__description--message=modal.message
        br
        br
        | #{modal.dev_team}
    p.modal__description.modal__description--both=modal.test_and_message
        br
        br
        | #{modal.dev_team}
    .modal__links-container
        a.modal__ios-link
            img(src=`/img/logo/btn-ios_${locale}.svg`, alt=modal.ios_app)
            span.visually-hidden=modal.ios_app
