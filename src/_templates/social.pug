-
    const socials = [
        {
            social: 'facebook',
            icon:'fb',
            link: 'https://www.facebook.com/www.golos.io',
            height: 24,
            width: 13
        },
        {
            social: 'vk.com',
            icon: 'vk',
            link: 'https://vk.com/goloschain',
            height: 18,
            width: 28
        },
        {
            social: 'telegram',
            icon: 'tg',
            link: 'https://t.me/golos_support',
            height: 20,
            width: 22
        }
    ]
ul.social
    each value in socials
        li.social__list-item
            a.social__link(href=value.link target="_blank" rel="noreferrer")
                span.visually-hidden=value.social
                svg.social__icon(height=value.height, width=value.width aria-label=value.social)
                    use(xlink:href=`img/sprite.svg#icon-${value.icon}`)


